<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prusakova.ragweed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fragments.ArticleFragment"></activity>
        <activity android:name=".BottomMenu" />
        <activity android:name=".fragments.SettingFragment" />
        <activity android:name=".activities.MedicinesActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.ForgetPasswordActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity
            android:name=".activities.LogInActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>