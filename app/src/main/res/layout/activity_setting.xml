<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingActivity"
    android:background="@drawable/sett">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Налаштування"
                android:textColor="@color/contentTextColor"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#CCCCCC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCircleImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimaryDark"
                android:src="@drawable/picture_plant"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Anna Prusakova"
                android:textColor="@color/contentTextColor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_toRightOf="@id/profileCircleImageView"
                android:layout_marginTop="35dp"/>

        </RelativeLayout>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#5D5C5C"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="50dp"
            android:text="Профіль"/>

        <TextView
            style="@style/viewParent.headerText.settingsTextIcon"
            android:textSize="18sp"
            android:drawableLeft="@drawable/icon_edit_profile"
            android:text="Редагувати профіль" />

        <TextView
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/icon_password"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="Пароль" />

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:textSize="18sp"
            android:text="Сповіщення"/>

        <Switch
            style="@style/settingsText"
            android:checked="true"
            android:textSize="18sp"
            android:drawableLeft="@drawable/icon_notification"
            android:text="Сповіщення"
            android:theme="@style/SwitchTheme" />

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:textSize="18sp"
            android:text="Інше"/>



        <TextView
            style="@style/viewParent.headerText.settingsTextIcon"
            android:id="@+id/logout_app"
            android:textSize="18sp"
            android:drawableLeft="@drawable/icon_exit"
            android:text="Вихід" />
    </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:labelVisibilityMode="selected"
            app:itemHorizontalTranslationEnabled="true"
            android:background="?android:attr/windowBackground"
            app:itemBackground="@color/colorPrimaryDark"
            android:foreground="?attr/selectableItemBackground"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/navigation" />

    </LinearLayout>

</ScrollView>